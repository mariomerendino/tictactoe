<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mariomerendino.tictactoe.Game">
    <TextView
        android:text="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/label" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/board"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <Button
            android:layout_marginTop="28dp"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:id="@+id/grid0"
            android:onClick="grid0ButtonClicked"
            android:visibility="visible" />

        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/grid1"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:onClick="grid1ButtonClicked"
            android:layout_marginTop="20dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/grid2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginTop="20dp"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="grid2ButtonClicked"
            />
    <Button
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/grid3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="grid3ButtonClicked"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/grid4"
        android:layout_alignBottom="@+id/grid3"
        android:layout_alignLeft="@+id/grid1"
        android:layout_alignStart="@+id/grid1"
        android:layout_marginBottom="0dp"
        android:onClick="grid4ButtonClicked"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/grid5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBottom="@+id/grid4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="grid5ButtonClicked"
        android:layout_alignTop="@+id/grid3" />

    <Button
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/grid6"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/grid3"
        android:layout_alignParentLeft="true"
        android:onClick="grid6ButtonClicked"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/grid8"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBottom="@+id/grid6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="grid8ButtonClicked"
        android:layout_alignTop="@+id/grid6" />

    <Button
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/grid7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignTop="@+id/grid6"
        android:layout_alignLeft="@+id/grid4"
        android:layout_alignStart="@+id/grid4"
        android:onClick="grid7ButtonClicked"
        android:layout_marginTop="7dp" />

    <Button
        android:text="Play Again? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/playAgain"
        android:elevation="0dp"
        android:visibility="invisible"
        android:onClick="replay"/>

</RelativeLayout>
